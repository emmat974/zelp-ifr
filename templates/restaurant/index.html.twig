{% extends 'base.html.twig' %}

{% block title %}Restaurant index{% endblock %}

{% block body %}
 
{% if is_granted("ROLE_RESTAURATEUR") %}
<div class="row my-2">
    <div class="col-md-12 col-lg-12 py-3 px-3 rounded bg-info text-center">

    <a href="{{ path('app_restaurant_new') }}" class="fs-3 text-decoration-none text-white"><i class="fa-solid fa-bell"></i> Vous êtes restaurateur, gerez vos fiches de vos restaurants</a>
    </div>
</div>
{% endif %}

<form action="{{ path('app_restaurant_index') }}" method="get" class="form-inline">
    <div class="input-group my-3">
        <input type="search" class="form-control" placeholder="Cap méchant" name="search">
        <button class="btn btn-primary" type="submit" id="search">
            <i class="fa-solid fa-magnifying-glass"></i>
        </button>
    </div>
</form>

{% include "restaurant/_card.html.twig" with {restaurants:restaurants} %}

    <div class="navigation">
        {{ knp_pagination_render(restaurants) }}
    </div>

{% endblock %}
